<view class="input-wrap">
  <view class="input-box">
    课堂人数：
    <input class="num-input" placeholder="*必填" type="number" maxlength="2" bindinput="classNumInput"/>
  </view>
  <view class="input-box">
    课堂老师：
    <input class="num-input" placeholder="*必填" type="text" maxlength="10" bindinput="classNameInput"/>
  </view>

</view>
<view class="page__bd page__bd_spacing create-btn">
  <button class="weui-btn" style="background-color:#606060" type="primary" loading="{{loading}}" bindtap="createClass">创建课堂</button>
</view>
