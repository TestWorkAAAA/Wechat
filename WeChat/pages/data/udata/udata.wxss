.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 50%; 
    color:#434343;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}
swiper{
  text-align: center;
}


/**上传资料**/
.servicecontainer {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 30rpx;
}

.content{
  font-family: "Microsoft YaHei";
}

/**滑块图片大小**/
swiper image {
  width: 100%;
  height: 100%;
}

/**设置图片样式**/
.item{
  border: 1px solid #cccccc;
  width: 90%;
  margin: 0 auto;
  background-color: #ffffff;
  padding: 10px;
  border-radius: 5px;
}
/**设置标题字体高度**/
.line{
  height: 10px;
}


/**设置分割线的样式**/
.hr{
  height: 1px;
  background-color: #cccccc;
  opacity: 0.2;
  margin-top: 10px;
  margin-bottom: 10px;
}

/**设置功能排列布局**/
.navs{
  display: flex;
  flex-direction: row;
  text-align: center;
  font-size: 13px;
  margin-bottom: 10px;
  padding-top: 10px;
}

/**设置图片大小**/
.nav{
  margin: 0 auto;
  width: 70px;
}

