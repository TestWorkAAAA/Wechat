.container {
  background-size: cover;
}
/**设置整个页面样式*/
.content {
  width: 100%;
  margin-bottom: 60px;
}
/**设置编辑空间样式*/
.input-box{
  background-color: #fff;
  width: 100%;
  height: 500px;
  display: block;
  border-radius: 5px;
  background-size: cover;
  padding: 20px;
  box-sizing: border-box;
}
.input-box textarea{
  width: 100%;
  margin-top: 10rpx;
  font-size: 30rpx;
}

/*设置四个功能显示样式*/
.operate-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  /*box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);*/
  z-index: 999;
}
.operation-list{
  display: flex;
  width: 100%;
  height: 40px;
  line-height: 40px;
  background: #f00;
  background-color: #fff;
  border-top: 1px solid #efefef;
}
.operation-list .item{
  display: flex;
  width: 25%;
  text-align: center;
}
.operation-list .item image{
  display: flex;
  width: 25px;
  height: 25px;
  margin-top: 5px;
  margin-left: 18px;
}
/**设置地址样式*/
.location{
  position: absolute;
  bottom: 70px;
  left: 10px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
  border: 1px solid #1296db;
  font-size: 12px;
  padding-left:12px;
  box-sizing: border-box;
  background-color: #fff;
  background-position: left;
  background-repeat: no-repeat;
  background-size: 20px 20px;
}
.font-box{
  width: 100%;
  height: 200px;
  background-color: #efefef;
  margin-bottom: -200px;
  z-index: 99999;
}
/**设置显示字体的样式*/
.font-box .font{
  /*background-color: #f00000;*/
  width: 100%;
  height: 50px;
  line-height: 50px;
}
.font-box .font .size{
  display: inline-block;
}
.size-item{
  display: inline-block;
  width: 40px;
  height: 40px;
  margin-right: 10px;
  position: relative;
}
.fontSize{
  width: 40px;
  height: 40px;
  background-color: #fff;
  line-height: 40px;
  text-align: center;
  border: 1px solid #efefef;
  border-radius: 5px;
  font-size:12px;
}

.selected{
   position: absolute;
   width: 20px;
   height: 20px;
   right: 0;
   bottom: 0;
}
.emoji {
  background-color: #fff;
  width: 30px;
  height: 30px;
  text-align: center;
  padding-top: 2px;
  box-sizing: border-box;
  font-size: 20px;
}
.emoji-box {
  background: #efefef;
  position: relative;
  height: 200px;
  margin-bottom: -200px;
}
.emoji-cell {
  width: 10%;
  height: 33px;
  display: inline-block;
}
.emoji-cell image {
  width: 30px;
  height: 30px;
  padding: 5px;
  border-radius: 3px;
}
.photo-box {
  background: #efefef;
  position: relative;
  height: 200px;
  padding: 5px 0;
  box-sizing: border-box;
  margin-bottom: -200px;
}
.photo-box scroll-view {
  width: 100%;
  white-space: nowrap;
}
.photo-box scroll-view .photo-cell {
  display: inline-block;
  width: 100px;
  height: 100px;
  box-sizing: border-box;
  position: relative;
}
.photo-box .addButton {
  width: 100px;
  height: 100px;
  background-size: 50px 50px;
  margin: 0 auto;
}
.photo-box .desc {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 12px;
}
.photo-box .photo-cell image {
  width: 80px;
  height: 80px;
}
.photo-box .photo-cell .delete {
  position: absolute;
  right: 0;
  top: 0;
  width: 20px;
  height: 20px;
  background-size: cover;
  z-index: 1000;
}

.emoji-move-in {
  -webkit-animation: emoji-move-in 0.3s forwards;
  animation: emoji-move-in 0.3s forwards;
}

.emoji-move-out {
  -webkit-animation: emoji-move-out 0.3s forwards;
  animation: emoji-move-out 0.3s forwards;
}

.no-emoji-move {
  -webkit-animation: none;
  animation: none;
}

@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}
