/**容器样式**/
.mine{
  height: 90px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/**头像样式**/
.img{
  width: 50px;
  height: 50px;
  float: left;
  margin: 7.5px 10px;
  border-radius: 25px;
}

/**昵称样式**/
.account{
  width: 70%;
  color: #040404;
  margin-left: 10px;
}


.nav{
  width:15px;
  color: #040404;
}

.content{
  height: 500px;

}


.item{
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  width: 94%;
  margin-left: 3%;
}

.icon{
  width: 50px;
  text-align: center;
}

.itemName{
width: 40%;
font-size: 14px;
font-weight: bold;
}

.right{
  width: 80%;

  text-align: right;
}

.opr{
  color: #5495E6;
  
  font-size: 13px;
  font-weight: bold;
  margin-right: 10px;
}


.hr{
    height: 1px;
    background-color: #cccccc;
    opacity: 0.2;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 99999;
    opacity: 0;
    transition: opacity 400ms ease-in;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}
.modal .dialog {
    width: 84%;
    height: 28%;
    background-color: #eceff4;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.dialog .modal-item {
    height: 33.3%;
    width: 100%;
}
.modal-button {
    height: 100rpx;
    margin-bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.modal-button view {
    width: 50%;
    border-top: 2rpx solid #E5E7ED;
    display: flex;
    justify-content: center;
    align-items: center;
}

.write-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #4c4343;
  font-size: 32rpx;
  font-weight: 600;
  background-size: 60rpx 60rpx;
}